# =============================================
# CheatVault Launcher - Environment Variables
# =============================================

# =============================================
# Application Configuration
# =============================================
# Application name and version
VITE_APP_NAME=CheatVault Launcher
VITE_APP_VERSION=1.0.0

# Environment (development, production, etc.)
VITE_NODE_ENV=development

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_MOCK_DATA=false

# =============================================
# API Configuration
# =============================================
# Base API URL
VITE_API_BASE_URL=http://localhost:8080

# Antistock API Configuration
VITE_ANTISTOCK_API_BASE=https://api.antistock.io
VITE_ANTISTOCK_API_KEY=your_antistock_api_key_here
VITE_ANTISTOCK_SHOP_ID=your_antistock_shop_id_here

# Request timeout in milliseconds
VITE_REQUEST_TIMEOUT=10000

# Maximum number of retries for failed requests
VITE_MAX_RETRIES=3

# =============================================
# Service Configuration
# =============================================
# Supabase Auth (required for account login/signup)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Google Analytics Measurement ID (optional)
VITE_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# CDN Base URL for assets (optional)
VITE_CDN_BASE_URL=

# WebSocket URL for real-time features (optional)
VITE_WEBSOCKET_URL=
